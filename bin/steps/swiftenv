puts-step Testing libmongoc
dpkg -L libmongoc

puts-step Installing mongo-c-driver
wget https://github.com/mongodb/mongo-c-driver/releases/download/1.14.0/mongo-c-driver-1.14.0.tar.gz
tar xzf mongo-c-driver-1.14.0.tar.gz
cd mongo-c-driver-1.14.0
mkdir cmake-build
cd cmake-build
cmake -DENABLE_AUTOMATIC_INIT_AND_CLEANUP=OFF ..

# Activate swiftenv
puts-step Installing swiftenv

export SWIFTENV_ROOT="$CACHE_DIR/$STACK/swiftenv"
export PATH="$ROOT_DIR/swiftenv/bin:$PATH"
eval "$(swiftenv init -)"

if [ -f "$BUILD_DIR/.swift-version" ]; then
    export SWIFT_VERSION=`cat $BUILD_DIR/.swift-version | tr -d '[[:space:]]'`
else 
    export SWIFT_VERSION="$DEFAULT_SWIFT_VERSION"
fi

# Install Swift
puts-step Installing Swift $SWIFT_VERSION
swiftenv install $SWIFT_VERSION -s
